{
  "name": "artillery",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "dev": "next dev -p 4281",
    "build": "next build",
    "build:css": "postcss assets/main.css -o assets/main_browser.css",
    "docker:build": "docker build -t artillery-website .",
    "docker:clean": "docker system prune --volumes -f",
    "docker:restart": "yarn docker:build && yarn docker:start -d && yarn docker:clean",
    "docker:start": "docker compose up -d",
    "docker:stop": "docker compose down",
    "lint": "next lint",
    "schema-gen": "graphql-codegen --config codegen.yml",
    "start": "next start -p 4281",
    "test": "jest --watch --coverage \".*\\.test\\.ts*\"",
    "test:e2e": "playwright test",
    "update": "git pull && yarn docker:restart"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@types/lodash.isequal": "^4.5.5",
    "graphql": "^16.3.0",
    "graphql-tag": "^2.12.6",
    "isomorphic-unfetch": "^3.1.0",
    "jwt-decode": "^3.1.2",
    "lodash.isequal": "^4.5.0",
    "next": "12.1.4",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-use": "^17.3.2",
    "ts-invariant": "0.10.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/fragment-matcher": "^3.2.1",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@next/bundle-analyzer": "^12.1.4",
    "@playwright/test": "^1.20.2",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^14.0.4",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.23",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@types/validator": "^13.7.2",
    "axios": "^0.26.1",
    "cross-env": "^7.0.3",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.4",
    "eslint-plugin-testing-library": "^5.2.0",
    "jest": "^27.5.1",
    "msw": "^0.39.2",
    "ts-jest": "^27.1.4",
    "typescript": "4.6.3"
  },
  "description": "Frontend for ARTillery.design",
  "main": "index.js",
  "repository": "git@github.com:RevNelson/artillery-website.git",
  "author": "Michael Nelson <revnelson@gmail.com>",
  "license": "MIT"
}
